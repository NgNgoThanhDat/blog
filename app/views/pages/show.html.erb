<% provide(:title, "Show") %>
<!-- Main Content -->
<div class="row">
	<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
		<h5 class="post-meta">Published <%= time_ago_in_words (@page.published_at) %> ago</h5>
		<p><%= markdown(@page.body) %></p>

		<hr>

		<h2>Comments</h2>
			<%= render @page.comments %>

		<hr>

		<h2>Add a comment:</h2>
			<%= render 'comments/form' %>

		<%= link_to "Edit", edit_page_path(@page), class: "btn-md btn-primary btn-right" %> | <%= link_to 'Back', root_path %>
	</div>
</div> 