<% provide(:title, "Home") %>
<!-- Main Content -->
<div class="row">
	<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
		<% @pages.each do |page| %>
		<div class="post-preview">						
			<h2><%= link_to(page.title, page) %></h2>
			<%= link_to "Edit", edit_page_path(page), class: "btn-md btn-primary btn-right" %>
			<p class="post-meta">Published <%= time_ago_in_words (page.published_at) %> ago</p>
		</div>
		<hr>
		<% end %>
	</div>
</div>